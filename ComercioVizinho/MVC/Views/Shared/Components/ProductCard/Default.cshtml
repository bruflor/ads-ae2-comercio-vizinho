@model MVC.Models.Product

<div class="col-sm-12 col-md-6 col-lg-3">
    <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id" style="text-decoration: none">
        <div class="card p-0 rounded-3 overflow-hidden h-100">
            <div class="card-img-top product-image"
                 style="background-image: url('images/product-placeholder.jpg')">
                <img src="@if (Model.ImagesUrl != null) { @Model.ImagesUrl.First() }" alt=""
                     style="width: auto; height: 100%;">
            </div>
            <div class="card-body p-4">
                <h5 class="fs-3 text-secondary-900 fw-bold mb-0">@Model.Name</h5>
                <p class="card-text fs-6">@Model.Producer.Name</p>
            </div>
            <div class="card-body p-4">
                <div class="d-flex flex-wrap justify-content-between align-items-center align-self-end">
                    <h6 class="col-auto fs-2 text-primary my-0 fw-bold py-0">@Model.Price â‚¬</h6>
                    <button
                        class="btn btn-primary  rounded-circle d-flex align-items-center justify-content-center text-white p-0 fs-2 fw-bold"
                        style="width: 48px; height: 48px;">
                        +
                    </button>
                </div>
            </div>
        </div>
    </a>
</div>
