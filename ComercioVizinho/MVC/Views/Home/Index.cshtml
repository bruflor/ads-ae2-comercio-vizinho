@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "Comércio Vizinho";
    var products = ViewData["Products"] as IEnumerable<Product>;
    var categories = ViewData["Categories"] as IEnumerable<Category>;

    var withCounter = 0;
}

<div>
    <header>
        <div class="bg-primary-900" style="height: 48px;"></div>


        <div class="container">
            <nav class="navbar navbar-expand-md py-5 justify-content-between">
                <a href="#" class="col-3">
                    <img src="~/images/logo.svg"
                         alt="Logo - uma folha azul, uma folha verde com o seguinte texto em um círculo comércio vizinho">
                </a>

                <ul class="navbar-nav">
                    <li class="nav-item active"><a href="#" class="nav-link">Promoções</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Produtos</a></li>
                    <li class="nav-item dropdown"><a href="#" class="nav-link dropdown-toggle">Categorias</a></li>
                </ul>

                <a href="#">profile</a>
                <a href="#">shop cart</a>
            </nav>
        </div>

        <div class="container banner mb-3 px-5">
            <div class="col-12 col-md-8 offset-md-2 mt-5 d-flex align-items-center flex-column">
                <p class="text-center">Frescor e sabor quem vêm da</p>
                <h3 class="title text-secondary text-center">Nossa terra</h3>
            </div>

            <div class="col-12 col-md-5 mt-5 pt-3">
                <form action="">
                    <div class="form-floating ml-5">
                        <input type="search" class="form-control" id="floatingInput" placeholder="Pesquisar produtos">
                        <label for="floatingInput">Pesquisar produtos</label>
                    </div>
                </form>
            </div>
        </div>

    </header>

    @* Products *@
    <div class="container mt-5">
        <h2 class="text-center fw-bold text-secondary-900">Produtos</h2>
        <p class="text-center">Colheita da vizinhança. Alimentos cultivados com carinho na sua região</p>


        <div class="row justify-content-start mt-5">
            @foreach (var product in products!)
            {
                @await Component.InvokeAsync("ProductCard", product)
            }
        </div>

        <div class="row justify-content-center mt-5">
            <button class="btn btn-primary rounded-5 text-white w-auto">VER TODOS</button>
        </div>
    </div>


    @* Ads banner *@
    <div class="container ads-banner">
        <div class="col-12 col-md-6">
            <div class="highlight-box d-flex flex-column gap-4">
                <div class="text-secondary w-100 d-flex justify-content-between">
                    <span class="fs-4">Promoções da Vizinhança</span>
                    <img src="~/images/isologo.svg" alt="Duas folhinhas, uma a azul e uma verde">
                </div>
                <div>
                    <h3 class="fs-1 text-primary fw-bolder">Economize 50%</h3>
                    <p class="mb-0">E apoie a nossa comunidade enquanto ajuda a reduzir o desperdicio.</p>
                    <p>Uma forma deliciosa de cuidar do planeta e do se bolso!</p>
                </div>

                <button class="btn btn-primary rounded-5 text-white w-auto">VER TODOS</button>
            </div>
        </div>
    </div>

    @* Categories *@
    @foreach (var category in categories!)
    {
        var w = 20 + withCounter;
        category.setWidth($"{w}px");

        @await Component.InvokeAsync("CategoryCard", category)
        withCounter = withCounter +10;
    }


    <div class="container pb-5 mt-5">
        <div class="col-6 offset-md-3">
            <h2 class="text-center fw-bold text-secondary-900">Categorias</h2>
            <p class="text-center">Explore os nossos produtos por categoria e encontre tudoo que você precisa</p>
        </div>

        <div class="row mt-2 gx-3 category-cards">
            <div class="col-12 col-md-6">
                <div style="background-image: url('images/banner-image.png');">
                    <button class="btn btn-primary rounded-5 text-white w-auto">DESPERDÍCIO ZERO</button>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div style="background-image: url('images/banner-image.png');">
                    <button class="btn btn-primary rounded-5 text-white w-auto">FRUTAS</button>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div style="background-image: url('images/banner-image.png');">
                    <button class="btn btn-primary rounded-5 text-white w-auto">LATICÍNIOS</button>
                </div>
            </div>
        </div>

        <div class="mt-5 d-flex gap-3 flex-wrap justify-content-center">
            <button class="btn btn-primary-100 rounded-5 text-secondary-900 w-auto">LEGUMES</button>
            <button class="btn btn-primary-100 rounded-5 text-secondary-900 w-auto">GRÃOS E CEREAIS</button>
            <button class="btn btn-primary-100 rounded-5 text-secondary-900 w-auto">CARNES E OVOS</button>
            <button class="btn btn-primary-100 rounded-5 text-secondary-900 w-auto">SUSTENTÁVEIS</button>
            <button class="btn btn-primary-100 rounded-5 text-secondary-900 w-auto">FARINHAS E MASSAS</button>
            <button class="btn btn-primary-100 rounded-5 text-secondary-900 w-auto">BEBIDAS</button>
            <button class="btn btn-primary-100 rounded-5 text-secondary-900 w-auto">ORGÂNICOS</button>
            <button class="btn btn-primary-100 rounded-5 text-secondary-900 w-auto">GELEIAS E DOCES</button>
            <button class="btn btn-primary-100 rounded-5 text-secondary-900 w-auto">SAZONAIS</button>
        </div>

    </div>


</div>