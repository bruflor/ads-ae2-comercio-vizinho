@model MVC.Models.Product

@{
    ViewBag.Title = "Detail";
    Layout = "_Layout";
}

<div class="container pb-5 mb-5">
    @* FIX: THAT PART MUST BE VISIBLE ONLY WHEN USER IS LOGGED IN AND HAS PERMISSION TO EDIT THIS PRODUCT*@
    <div class="actions mt-3 mb-5 d-flex justify-content-end p-0 g-">
        <button class="btn btn-outline-danger">Excluir</button>
        <button class="btn btn-outline-secondary-100">Editar</button>
    </div>
    
    <div class="row">
        <div class="col-md-6 bg-primary-100" style="border: 5px solid white; border-radius: 8px; min-height:300px">
            <img src="" alt="" style="width: 100%; height: auto;">
            <div>
            <img src="" alt="" style="width: 120px; height: 120px;">
            <img src="" alt="" style="width: 120px; height: 120px;">
            <img src="" alt="" style="width: 120px; height: 120px;">
            </div>
        </div>

        <div class="col-md-6 d-flex flex-column justify-content-between" style="padding-left: 32px !important">
            <h2 class="d-flex justify-content-between align-items-center">@Model.Name
                <button class="btn btn-outline-primary">Adicionar ao favoritos</button>
            </h2>
            <p>Price: @Model.Price</p>

            <h3>Categories:</h3>
            <ul>
                @foreach (var category in Model.Categories)
                {
                    <li>@category.Name</li>
                }
            </ul>

            <div class="d-flex justify-content-end align-self-end mt-3 justify-self-end">
                <button class="btn btn-primary ml-auto mr-0" style="font-size:32px; max-width:320px;">Adicionar ao carrinho</button>
            </div>


        </div>
    </div>


</div>
